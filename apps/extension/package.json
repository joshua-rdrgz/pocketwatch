{
  "name": "extension",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "npm-run-all --parallel dev:react dev:extension",
    "dev:react": "cd src/react && npm run dev",
    "dev:extension": "webpack --watch --mode=development",
    "build": "npm run build:react && webpack --mode=production",
    "build:react": "cd src/react && npm run build",
    "lint": "eslint . --max-warnings 0",
    "format": "prettier --write \"**/*.{ts,js,md}\"",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@repo/ui": "workspace:*"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/chrome": "^0.0.269",
    "@types/node": "^22.15.3",
    "chokidar": "^4.0.3",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^9.0.0",
    "fs-extra": "^11.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.0.0",
    "webpack": "^5.99.7",
    "webpack-cli": "^6.0.1"
  }
}
