{
  "manifest_version": 3,
  "name": "Model Metrics Chrome Extension",
  "version": "1.0",
  "description": "A Chrome extension with a draggable iframe",
  "permissions": ["activeTab", "scripting", "tabs", "sidePanel"],
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["browser-panel.js"],
      "css": ["browser-panel.css"]
    }
  ],
  "side_panel": {
    "default_path": "react/side-panel/index.html"
  },
  "web_accessible_resources": [
    {
      "resources": ["react/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
